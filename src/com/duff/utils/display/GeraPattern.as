package com.duff.utils.display{import flash.display.Stage;import flash.display.DisplayObjectContainer;import flash.display.Sprite;import flash.display.BitmapData;import flash.geom.Matrix;public class GeraPattern extends Sprite{	public static function get(_scope:DisplayObjectContainer, _pattern:BitmapData, _stage:Stage):void	{		var _img:BitmapData = _pattern;		var _mc:Sprite = new Sprite();		var _matrix:Matrix = new Matrix();		var _bmd:BitmapData = new BitmapData(_img.width, _img.height, true);						_bmd.draw(_img);		_mc.graphics.beginBitmapFill(_bmd, _matrix, true, true);		_mc.graphics.drawRect(0,0,_stage.stageWidth,_stage.stageHeight);		_mc.graphics.endFill();		_scope.addChildAt(_mc,0);	}}}