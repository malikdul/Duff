package com.duff.utils.display{		import flash.display.DisplayObject;	import flash.geom.ColorTransform;	public class ColorUtil	{					//_____________________________________________________________ PUBLIC METHODS				public static function formatHex(hex:uint, prefix:String = '0x'):String		{			return prefix + hex.toString(16);		}				public static function apply(target:DisplayObject, color:uint):void		{			var colorTransform:ColorTransform = target.transform.colorTransform;			colorTransform.color = color;			target.transform.colorTransform = colorTransform;		}	}}