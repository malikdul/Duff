/*** @author borella*/package com.duff.utils.display {	public class RemoveInstance{		// ___________________________________________________________________ PUBLIC METHODS		/**		 * Funcão para revomer instacia		 * @param	Nome da classe		 * @param	scope		 */		public static function init(className:String, _scope:*):void		{			var _total:Number = _scope.numChildren;			for (var i:uint=0; i<_total; i++){				if ( _scope.getChildAt(i).name == className) _scope.removeChildAt(i);			}		}			}//-- end class}//-- end package