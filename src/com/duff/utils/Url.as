/** * @author Bruno Borella*/package com.duff.utils {	//______________________________________________________________________ IMPORTS	import flash.net.navigateToURL;	import flash.net.URLRequest;	public class Url{		// ___________________________________________________________________ CONSTANTS		public static const WINDOW_SELF:String   = '_self';		public static const WINDOW_BLANK:String  = '_blank';		public static const WINDOW_PARENT:String = '_parent';		public static const WINDOW_TOP:String    = '_top';				// ___________________________________________________________________ PUBLIC METHODS				/**		 * Funcao baseda no getURL(as2)		 * @param	Link		 * @param	Window mode		 */		public static function open(_link:String, _window:String = WINDOW_SELF):void 		{			var request:URLRequest = new URLRequest(_link);			navigateToURL(request, _window);		}				/**		 * Função para chamar javascript		 * @param	Funcao		 * @param	Window mode		 */		public static function callJs(_funcao:String, _window:String = WINDOW_SELF) : void		{			navigateToURL(new URLRequest("javascript:" + _funcao), _window);		}				/**		 * Função para chamar Javascript alert		 * @param	Texto		 */		public static function callAlert (_texto:String) : void		{			//URLUtil.javascript("alert('" + _texto + "')");		}	}}