/** * @author borella*/package com.duff.utils{	import flash.display.Stage;	public class FlashVar{		// ___________________________________________________________________ PUBLIC METHODS		/**		 * 		 * @param	Nome da flashvar		 * @param	stage		 */		public static function getValue(_var:String, _stage:Stage):String		{			var valor:String;			if(_stage.loaderInfo.parameters[_var]) 				valor = _stage.loaderInfo.parameters[_var];			else				valor = "";							return valor;		}		public static function hasValue(_var:String, _stage:Stage):Boolean		{			return getValue(_var, _stage) ? true : false;		}	}}